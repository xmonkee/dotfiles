_print_msg_with_link() {
    commit_range="$1^..$1"
    link=$(git log "${commit_range}" | grep -i "Differential Revision" | sed 's/.*Differential Revision: //g')
    git log $1^..$1 --graph --pretty=format:"%Cred%h%Creset ${link} -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
}

gl() {
    for commit in $(git log --pretty=format:%h origin/dev..HEAD); do
        _print_msg_with_link $commit
    done
}

gil() {
    git log --graph --abbrev-commit --stat --summary -C --decorate --date=local
}
