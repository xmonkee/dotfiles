# enable color support of ls and also add handy aliases
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias socks5='ssh -D 8123 -f -C -q -N $UPVEST && firefox -private &'
alias xopen='xdg-open'
alias cc='gcalcli --calendar mandava@uber.com --calendar mayankmandava@gmail.com --calendar "Me and Ash" --calendar "money-payements-efficiency" agenda'
function vimgit {
    vim $(git diff $1 --name-only)
}

function tm {
    tmux attach -t $1 || tmux new-session -s $1
}
